#!/bin/bash

set -e
set -u

PID=$$
/usr/bin/python manage.py update_product_details

(
    sleep 1800
    while true; do
        /usr/bin/python manage.py update_product_details && \
            kill -s HUP $PID
            sleep 1800
    done
) &

rm -rf /static/media /static/admin-media

mkdir -p /static/media
mkdir -p /static/admin-media

cp -R media/ /static/media/
cp -R vendor/lib/python/django/contrib/admin/static/ /static/admin-media/

exec gunicorn "$@"
